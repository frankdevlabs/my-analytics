# ============================================================================
# Docker Infrastructure Configuration Template
# This file configures PostgreSQL and Redis containers defined in docker-compose.yml
# ============================================================================
# INSTRUCTIONS:
# 1. Copy this file to .env: cp .env.example .env
# 2. Update values as needed for your environment
# 3. Never commit the .env file to version control
# ============================================================================

# PostgreSQL Configuration
# Database credentials
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=my_analytics

# PostgreSQL performance tuning
# Adjust these values based on your available system resources
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_EFFECTIVE_CACHE_SIZE=1GB
POSTGRES_WORK_MEM=16MB
POSTGRES_MAINTENANCE_WORK_MEM=128MB

# PostgreSQL port mapping (HOST:CONTAINER)
POSTGRES_PORT=5432

# PostgreSQL resource limits
POSTGRES_MEMORY_LIMIT=1G
POSTGRES_MEMORY_RESERVATION=512M

# Redis Configuration
# Redis memory and eviction policy
REDIS_MAXMEMORY=256mb
REDIS_MAXMEMORY_POLICY=allkeys-lru

# Redis persistence settings
REDIS_APPENDONLY=yes
REDIS_APPENDFSYNC=everysec
REDIS_SAVE_INTERVAL=60 1000

# Redis port mapping (HOST:CONTAINER)
REDIS_PORT=6379

# Redis resource limits
REDIS_MEMORY_LIMIT=512M
REDIS_MEMORY_RESERVATION=128M
